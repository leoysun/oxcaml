{
        "build": {      "dockerfile": "Dockerfile" },
        "name": "OxCaml Playground",
        "customizations": {
                "vscode": {
                        "extensions": [
                                "ocamllabs.ocaml-platform",
                                "ms-vscode.cpptools",
                                "eamodio.gitlens",
                                "Shuumatsu.vscode-ocamlformat"
                        ]
                }
        }, 
        "postCreateCommand": "opam update && opam install -y dune ppx_expect alcotest qcheck-core && echo 'eval $(opam env)' >> ~/.bashrc"

}
